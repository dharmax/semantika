{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": [
    "index.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "lib": [
    "ES2020"
  ],
  "declaration": true,
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
}